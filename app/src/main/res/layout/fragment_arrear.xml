<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/arrear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:text="Długi"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/arrear_recycler"
        android:scrollbars="vertical"
        android:layout_below="@id/arrear_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/repayment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_below="@id/arrear_recycler"
        android:text="Spłaty"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/repayment_recycler"
        android:scrollbars="vertical"
        android:layout_below="@id/repayment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
</ScrollView>